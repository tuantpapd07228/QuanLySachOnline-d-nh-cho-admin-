<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ThongKeDoanhThuThangFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_marginVertical="10dp"
                android:background="#E8ECE4"
                android:layout_weight="40"
                android:layout_height="wrap_content"
                android:text="2023/5/5"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/dauthang"/>
            <TextView
                android:layout_width="0dp"
                android:layout_marginVertical="10dp"
                android:background="#E8ECE4"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:text="-"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_marginVertical="10dp"
                android:background="#E8ECE4"
                android:layout_weight="40"
                android:layout_height="wrap_content"
                android:text="2023/5/5"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/cuoithang"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Tổng doanh thu"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="1000000000"
                        android:gravity="end"
                        android:paddingRight="10dp"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:id="@+id/thang_tongdoanhthu"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Tổng lượng hóa đơn"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="1000000000"
                        android:gravity="end"
                        android:paddingRight="10dp"
                        android:id="@+id/thang_tonghoadon"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Số đầu sách đã bán"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="1000000000"
                        android:gravity="end"
                        android:paddingRight="10dp"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:id="@+id/thang_tongsachdaban"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="#BCE8EF">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/khoanthoigianrecycleview"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>